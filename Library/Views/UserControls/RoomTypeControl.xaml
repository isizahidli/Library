<UserControl x:Class="Library.Views.UserControls.RoomTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views.UserControls" xmlns:components="clr-namespace:Library.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="DarkGray" BorderThickness="5">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">

                <components:ControlHeader/>
                <components:MessageDialog Height="0" x:Name="MessageDialog"/>

                <Grid Background="LightGray" >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Style="{StaticResource grdForm}" Margin="0 0 30 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" >
                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Left" Margin="5 5">Name</TextBlock>
                            <TextBlock Height="25" FontSize="15" HorizontalAlignment="Left" Margin="5 5">Description</TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding CurrentRoomType.Name}" FontSize="15" Height="25" Width="250" HorizontalAlignment="Left" Margin="5" />
                            <TextBox Text="{Binding CurrentRoomType.Description}" Height="60" FontSize="15" Margin="5 0 0 0"  />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="1">
                            <TextBlock Height="25" Margin="5 5" FontSize="15" HorizontalAlignment="Left" >Max Adults</TextBlock>
                            <TextBlock Height="25" Margin="5 5" FontSize="15" HorizontalAlignment="Left" >Max Children</TextBlock>
                            <TextBlock Height="25" Margin="5 5" FontSize="15" HorizontalAlignment="Left" >Price Per Night</TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBox Text="{Binding CurrentRoomType.MaxAdults}" FontSize="15" Height="25" Width="250" HorizontalAlignment="Left" Margin="5"/>
                            <TextBox Text="{Binding CurrentRoomType.MaxChildren}" FontSize="15" Height="25" Width="250" HorizontalAlignment="Left" Margin="5"/>
                            <TextBox Text="{Binding CurrentRoomType.PricePerNight}" FontSize="15" Height="25" Width="250" HorizontalAlignment="Left" Margin="5"/>
                        </StackPanel>

                    </Grid>

                    <StackPanel Grid.Column="1">
                        <components:FormButtons/>
                    </StackPanel>
                </Grid>

            </StackPanel>

            <ListView x:Name="MainList" ItemsSource="{Binding RoomTypes}"
                      SelectedItem="{Binding SelectedRoomType}"
                      Grid.Row="1"  Style="{StaticResource listViewCustom}">

                <ListView.View>
                    <GridView >
                        <GridViewColumn  DisplayMemberBinding="{Binding No}"  Header="No" Width="25"/>
                        <GridViewColumn  DisplayMemberBinding="{Binding Name}" Header="Ad" Width="100"/>
                        <GridViewColumn  DisplayMemberBinding="{Binding MaxAdult}" Header="Max adult" Width="100"/>
                        <GridViewColumn  DisplayMemberBinding="{Binding MaxChildren}" Header="Max children" Width="100"/>
                        <GridViewColumn  DisplayMemberBinding="{Binding PricePerNight}" Header="Price per night" Width="100"/>
                        <GridViewColumn  DisplayMemberBinding="{Binding Description}" Header="Qeyd" Width="500"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Row="2" Style="{StaticResource grdSearch}">
                <components:Search Grid.Column="0"/>
            </Grid>

        </Grid>
    </Border>
</UserControl>
