<UserControl x:Class="Library.Views.Components.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Border Background="Black" BorderThickness="3" >
        <TextBlock Text="{Binding Message}"  Height="25" Foreground="Red" FontSize="22" Background="Black" TextAlignment="Center" FontWeight="Medium" />
    </Border>
</UserControl>
